<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layFundo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_grey"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="MESA:"
                android:textAlignment="textStart"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNunMesa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/digit"
                android:text="2"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="60sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="QUANT:"
                android:textAlignment="textStart"
                android:textColor="@android:color/background_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuantidade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/digit"
                android:text="2"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/primary_text_light"
                android:textSize="60sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="673dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="serif"
                android:paddingLeft="5dp"
                android:text="FILÃ‰ C/ FRITAS"

                android:textColor="@color/color_restaurante"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvObservacao"
                    android:layout_width="557dp"
                    android:layout_height="match_parent"
                    android:fontFamily="serif"
                    android:paddingLeft="5dp"
                    android:paddingTop="2dp"
                    android:text="SEM QUEIJO"

                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvTempoPreparo"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:fontFamily="serif"
                    android:paddingTop="2dp"
                    android:text="0:20"
                    android:textAlignment="center"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="T. ESPERA:"
                android:textAlignment="textStart"
                android:textColor="@color/color_green"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTempoEspera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/digit"
                android:paddingTop="3dp"
                android:text="00:00"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/color_green"
                android:textSize="30sp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>

